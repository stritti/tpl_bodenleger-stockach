<!DOCTYPE install PUBLIC "-//Joomla! 1.6//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">

<extension version="3.1" type="template" client="site" method="upgrade">

   <name>Bodenleger-Stockach</name>
   <creationDate>2014-03-13</creationDate>
   <version>2.0.1</version>
   <author>Stephan Strittmatter</author>
   <authorUrl>https://github.com/stritti</authorUrl>
   <license>The MIT License (MIT)</license>
   <description>
      <p>
         Free responsive Joomla! 3.0 Template based on ZURB Foundation initially designed for
         <a href="http://www.bodenleger-stockach.de">www.bodenleger-stockach.de</a>.
      </p>
      <p>
         Full source at https://github.com/stritti/tpl_bodenleger-stockach
      </p>
   </description>

   <files>
      <folder>css</folder>
      <folder>html</folder>
      <folder>images</folder>
      <folder>js</folder>

      <filename>LICENSE</filename>
      <filename>component.php</filename>
      <filename>favicon.ico</filename>
      <filename>functions.php</filename>
      <filename>index.php</filename>
      <filename>index.html</filename>
      <filename>template_preview.png</filename>
      <filename>template_thumbnail.png</filename>    
      <filename>templateDetails.xml</filename>
   </files>

   <positions>
      <position>banner</position>
      <position>debug</position>
      <position>position-0</position> <!-- Search -->
      <position>position-1</position> <!-- navigation -->
      <position>position-2</position> <!-- breadcrumb -->
      <position>position-3</position> <!-- Top center -->
      <position>position-4</position> <!-- bottom 1 -->
      <position>position-5</position> <!-- bottom 2 -->
      <position>position-6</position> <!-- bottom 3 -->
      <position>position-7</position> <!-- right -->
      <position>position-8</position> <!-- left -->
      <position>position-9</position> <!-- footer 1 -->
      <position>position-10</position> <!-- footer 2 -->
      <position>position-11</position> <!-- footer 3 -->
      <position>position-12</position>
      <position>position-13</position>
      <position>position-14</position>
      <position>copyright</position>
   </positions>
   <languages folder="language">
      <language tag="en-GB">en-GB/en-GB.tpl_bodenleger-stockach.ini</language>
      <language tag="en-GB">en-GB/en-GB.tpl_bodenleger-stockach.sys.ini</language>
   </languages>
   <config>
      <fields name="params">
         <fieldset name="basic" description="Enter text here" label="Frontpage text and title parameters">
            <field type="text" name="siteTitle" description="Maintitle" label="Main-Titel" default="Bodenleger J. Schmid" size="40"/>
            <field type="text" name="siteDescription" description="Subtitle" label="Subtitle" default="Verlegearbeiten - Schleifarbeiten - Estrichsanierung" size="40"/>
            <field type="text" name="siteCopyright" description="Copyright-Information" label="Copyright" default="Ihre Firma/Seite oder Verein" size="40"/>
            <field type="text" name="googleAnalytics" description="Google Analytics ID to track website" label="Google Analytics ID" default="UA-29149707-1" size="20"/>
         </fieldset>
         <fieldset name="social" description="Social Links" label="Social Links">
            <field type="text" name="googlePublisher" description="URL of corresponding Google+ Page" label="Google+ Publisher URL" default="https://plus.google.com/+BodenlegerJSchmidStockach" size="40" />
            <field type="text" name="facebookFanpage" description="URL of corresponding Facebook FanPage" label="Facebook Fanpage URL" default="https://www.facebook.com/bodenleger.j.schmid" size="40" />
            <field type="text" name="twitterAccount" description="URL of your Twitter-Account" label="Twitter Account URL" default="https://www.twitter.com/_stritti_" size="40" />
         </fieldset>
         <fieldset name="slideshow" description="Backround Slideshow" label="Backround Slideshow">
            <field type="media" name="slide-1" description="Image for background slide" label="Image for background slide" default="/templates/bodenleger-stockach/images/1.jpg" filter="string"/>
            <field type="media" name="slide-2" description="Image for background slide" label="Image for background slide" default="/templates/bodenleger-stockach/images/2.jpg" filter="string"/>
            <field type="media" name="slide-3" description="Image for background slide" label="Image for background slide" default="/templates/bodenleger-stockach/images/3.jpg" filter="string"/>
            <field type="media" name="slide-4" description="Image for background slide" label="Image for background slide" default="/templates/bodenleger-stockach/images/4.jpg" filter="string"/>
            <field type="media" name="slide-5" description="Image for background slide" label="Image for background slide" default="/templates/bodenleger-stockach/images/5.jpg" filter="string"/>
            <field type="media" name="slide-6" description="Image for background slide" label="Image for background slide" default="/templates/bodenleger-stockach/images/6.jpg" filter="string"/>
         </fieldset>
      </fields>
   </config>
  
   <updateservers>
      <server type="extension" priority="1" name="Update-Server">http://stritti.github.io/tpl_bodenleger-stockach/update.xml</server>
   </updateservers>
</extension>
